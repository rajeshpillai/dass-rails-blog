<h1>Users</h1>

<%= form_with url: make_users_admin_path, local: true, method: :put do |form|  %>
    <table class="table table-striped table-condensed">
    <thead>
        <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Admin</th>
        <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= check_box_tag "user_ids[]", user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.admin %></td>
        </tr>
        <% end %>
    </tbody>
    </table>
    <%= submit_tag "Make Admin"%>
<% end %>
<br>
